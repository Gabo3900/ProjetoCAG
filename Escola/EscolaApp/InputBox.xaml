<Window x:Class="EscolaApp.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EscolaApp"
        mc:Ignorable="d"
        Title="InputBox"  Height="120" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Name="txtInput" Margin="10,6,10,10" Grid.ColumnSpan="2" />
        <Button Content="OK" Click="OK_Click" Grid.Row="1" Margin="10,7,10,7" />
        <Button Content="Cancelar" Click="Cancel_Click" Grid.Row="1" Grid.Column="1" Margin="10,7,10,7" />
    </Grid>
</Window>
